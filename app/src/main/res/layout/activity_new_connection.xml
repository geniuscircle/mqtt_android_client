<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/container_newconnection_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/txt_newconnection_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:text="@string/server" />

        <AutoCompleteTextView
            android:id="@+id/etxt_newconnection_server"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:ems="10"
            android:text="@string/txt_config_server_address"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_newconnection_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/container_newconnection_server" >

        <TextView
            android:id="@+id/txt_newconnection_server_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dip"

            android:text="@string/port" />

        <EditText
            android:id="@+id/etxt_newconnection_server_port"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:ems="10"
            android:text="@string/txt_config_server_port"
            android:hint="@string/portHint"
            android:inputType="number" />
    </LinearLayout>



</RelativeLayout>